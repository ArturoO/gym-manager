{% extends 'base.html.twig' %}

{% block main_column %}
	{% if events %}
	<h3>List of all events</h3>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>ID</th>
				<th>Title</th>
				<th>Description</th>
			</tr>
		</thead>
		<tbody>
			{% for event in events %}
			<tr>
				<td>{{ event.id }}</td>
				<td>{{ event.title }}</td>
				<td>{{ event.description }}</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
	{% endif %}	
	
{% endblock %}

