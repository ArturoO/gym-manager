{% extends 'full-width.html.twig' %}


{% block page_content %}
<div class="col-sm-12 text-left"> 
	{% if users %}
	<h3>Users:</h3>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>ID</th>
				<th>Username</th>
				<th>Email</th>
				<th>Active</th>
				<th>Role</th>
				{% if is_granted('ROLE_ADMIN') %}
				<th>Actions</th>
				{% endif %}
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
			<tr>
				<td>{{ user.id }}</td>
				<td>{{ user.username }}</td>
				<td>{{ user.email }}</td>
				<td>{{ user.active }}</td>
				<td>{{ user.role }}</td>
				{% if is_granted('ROLE_ADMIN') %}
				<td>
					<a type="button" href="" class="btn btn-primary">Edit</a>
					<a type="button" href="" class="btn btn-danger">Delete</a>
				</td>
				{% endif %}
			</tr>
			{% endfor %}
		</tbody>
	</table>
	{% endif %}	
</div>

{% endblock %}