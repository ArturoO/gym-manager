{% extends 'full-width.html.twig' %}

{% block main_column %}
	<h2>Edit hour:</h2>
	{{ form_start(form, {'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'}}) }}
		
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				{{ form_errors(form) }}
			</div>
		</div>
			
		<div class="form-group">
			{{ form_label(form.start, 'Start', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
			<div class="col-sm-10">
				{{ form_widget(form.start, {'attr': {'class': 'time-field'}}) }}
				{{ form_errors(form.start) }}
			</div>
		</div>
			
		<div class="form-group">
			{{ form_label(form.end, 'End', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
			<div class="col-sm-10">
				{{ form_widget(form.end, {'attr': {'class': 'time-field'}}) }}
				{{ form_errors(form.end) }}
			</div>
		</div>
			
			<div class="form-group">
			{{ form_label(form.day, 'Day', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
			<div class="col-sm-10">
				{{ form_widget(form.day, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(form.day) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.description, 'Description', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
			<div class="col-sm-10">
				{{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(form.description) }}
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
				<a type="button" href="{{ path('view_event_hours', {'id': event_id}) }}" class="btn btn-default">Back</a>
			</div>
		</div>
		
	{{ form_end(form) }}
	
	
{% endblock %}


