{% extends 'base.html.twig' %}

{% block main_column %}
	<h2>Edit hour:</h2>
	{{ form_start(form, {'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'}}) }}
		
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				{{ form_errors(form) }}
			</div>
		</div>
			
		<div class="form-group">
			{{ form_label(form.start, 'Start', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
			<div class="col-sm-10">
				{{ form_widget(form.start, {'attr': {'class': 'datetime-field'}}) }}
				{{ form_errors(form.start) }}
			</div>
		</div>
			
		<div class="form-group">
			{{ form_label(form.end, 'End', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
			<div class="col-sm-10">
				{{ form_widget(form.end, {'attr': {'class': 'datetime-field'}}) }}
				{{ form_errors(form.end) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.description, 'Description', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
			<div class="col-sm-10">
				{{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(form.description) }}
			</div>
		</div>
			
		<div class="form-group">
			{{ form_label(form.location, 'Location', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
			<div class="col-sm-10">
				{{ form_widget(form.location, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(form.location) }}
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				{{ form_widget(form.save, {'attr': {'class': 'btn btn-default'}}) }}
			</div>
		</div>
		
	{{ form_end(form) }}
	
	
{% endblock %}


